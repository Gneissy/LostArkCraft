<%# Including header partial %>
<%- include("partials/header"); -%>


<div class="row">
  <div class="tradeItemsColumn">
    <h1 class="enterance-title enterance-title-profitAll">Here are all profit rates of Battle Items, descendingly.</h1>
    <table class="main-table">
      <tr class=table-raw>
        <td class="table-data">img</td>
        <td class="table-data item-name">Item Name</td>
        <td class=" table-data cell">Profit Rate</td>

        <!-- Future Feature -->
        <!-- <td class=" table-data cell">Requirements</td> -->
      </tr>

      <% tradeItemDisplayed.slice().forEach(function(tradeItemDisplayed){ %> <!-- To loop all raws -->
      <tr class="table-raw rarity-<%= tradeItemDisplayed.rarity %>"> <!-- Background color correspoding to rarity -->
        <td class="table-data">
          <div class="img">
            <img class="item-image" src="images/<%= tradeItemDisplayed.name %>.png" alt="ex"> <!-- To assign images according to trade item name -->
          </div>
        </td>
        <td class="table-data item-name"><%= tradeItemDisplayed.name %></td> <!-- Object name -->
        <td class="table-data cell"><%= tradeItemDisplayed.profitRate.toFixed(2) %>%</td> <!-- Displaying 2 digits after decimal -->

        <!--Displaying corresponding Battle item's requirement table-->
        <td class="table-data cell">
          <div class="hover_img">
             <a class = "lens-image" href="#">🔍<span><img class ="req-img" src="images/<%= tradeItemDisplayed.name %>-req.png" alt="image" height="100" /></span></a>
          </div>
        </td>

      </tr>
      <% }); %>

    </table>

  </div>
</div>

<%# Including footer partial %>
<%- include("partials/footer"); -%>
